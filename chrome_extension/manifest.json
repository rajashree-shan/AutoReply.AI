{
  "manifest_version": 3,
  "name": "AI Email Assistant",
  "version": "1.0",
  "description": "Auto-checks your Gmail and replies to interviews.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "https://autoreply-ai.onrender.com/*"
  ]
}
